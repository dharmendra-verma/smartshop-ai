# Application Settings
APP_NAME=SmartShop AI
APP_VERSION=1.0.0
ENV=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.7

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/smartshop_ai
DB_ECHO=false
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# Session Management
SESSION_SECRET_KEY=your-secret-key-here-change-in-production
SESSION_EXPIRE_MINUTES=30

# Vector Store (FAISS)
VECTOR_STORE_PATH=./data/embeddings/faiss_index
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# External APIs (if needed)
# PRICING_API_KEY=your-pricing-api-key
# PRICING_API_URL=https://api.example.com/v1/prices

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
CORS_ALLOW_CREDENTIALS=true

# Monitoring & Observability
SENTRY_DSN=  # Optional: Add Sentry DSN for error tracking
ENABLE_METRICS=true

# Agent Configuration
AGENT_TIMEOUT_SECONDS=30
AGENT_MAX_RETRIES=3
AGENT_RETRY_DELAY_SECONDS=1

# Data Pipeline
DATA_REFRESH_INTERVAL_HOURS=24
BATCH_SIZE=1000

# Feature Flags
ENABLE_VOICE_INPUT=false
ENABLE_PRICE_ALERTS=false
ENABLE_MULTI_LANGUAGE=false
